# Production Environment Variables
# Copy this to .env and update with your secure values

# Domain
DOMAIN=app.lab.joku.dev

# MongoDB Configuration
#MONGO_ROOT_USER=admin
#MONGO_ROOT_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DATABASE_URL=mongodb://mongodb:27017/chatapp

# RabbitMQ Configuration
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# Mongo Express (Admin UI)
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# TURN Server Configuration
TURN_USERNAME=turnuser
TURN_PASSWORD=turnpassword
# Set this to your server's public IP address for production
# Leave empty for local/development
EXTERNAL_IP=

# Node Environment
NODE_ENV=production

# Frontend URLs
REACT_APP_API_URL=https://app.lab.joku.dev
REACT_APP_WS_URL=wss://app.lab.joku.dev
REACT_APP_TURN_CONFIG_URL=/api/turn/config
REACT_APP_TURN_STATS_URL=/api/turn/stats
